@model UserRoles.ViewModels.AddProfessorViewModel
@{
    ViewData["Title"] = "Add New Professor";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* ... existing styles ... */

    .section-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 0.75em;
        font-weight: 600;
        margin-left: 8px;
    }

    .section-available {
        background: #d1fae5;
        color: #065f46;
    }

    .section-taken {
        background: #fee2e2;
        color: #991b1b;
    }

    .option-disabled {
        color: #94a3b8;
        font-style: italic;
    }
</style>

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <h1><i class="fas fa-user-plus"></i> Add New Professor</h1>
            <p>Create a new professor account with login credentials</p>
        </div>

        <div class="info-box">
            <p>
                <i class="fas fa-info-circle"></i>
                <strong>Important:</strong> The professor will be able to log in using their email address and the password you set here.
            </p>
            <p style="margin-top: 10px;">
                <strong>Assignment Rules:</strong><br>
                • <strong>Grades 1-3:</strong> One professor per grade (handles all subjects and sections)<br>
                • <strong>Grades 4-6:</strong> Up to 6 professors per section (one per subject: Math, Science, English, Filipino, Social Studies, MAPEH)
            </p>
        </div>

        <form asp-action="AddProfessor" method="post" id="professorForm">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

            <div class="form-group">
                <label asp-for="FullName">
                    <i class="fas fa-user"></i> Full Name *
                </label>
                <input asp-for="FullName" class="form-control" placeholder="Enter professor's full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">
                    <i class="fas fa-envelope"></i> Email Address *
                </label>
                <input asp-for="Email" class="form-control" type="email" placeholder="professor@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password">
                        <i class="fas fa-lock"></i> Password *
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">
                        <i class="fas fa-lock"></i> Confirm Password *
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="GradeLevel">
                        <i class="fas fa-graduation-cap"></i> Assigned Grade Level *
                    </label>
                    <select asp-for="GradeLevel" class="form-control" id="gradeSelect" required>
                        <option value="">-- Select Grade Level --</option>
                        <option value="1">Grade 1</option>
                        <option value="2">Grade 2</option>
                        <option value="3">Grade 3</option>
                        <option value="4">Grade 4</option>
                        <option value="5">Grade 5</option>
                        <option value="6">Grade 6</option>
                    </select>
                    <span asp-validation-for="GradeLevel" class="text-danger"></span>
                    <small class="form-text text-muted" id="gradeHint" style="display:none;">
                        <i class="fas fa-info-circle"></i> <span id="gradeHintText"></span>
                    </small>
                </div>

                <div class="form-group" id="sectionGroup" style="display:none;">
                    <label asp-for="Section">
                        <i class="fas fa-door-open"></i> Assigned Section *
                    </label>
                    <select asp-for="Section" class="form-control" id="sectionSelect">
                        <option value="">-- Select Section --</option>
                    </select>
                    <span asp-validation-for="Section" class="text-danger"></span>
                    <small class="form-text text-muted" id="sectionHint" style="display:none;">
                        <i class="fas fa-info-circle"></i> Sections marked as "Taken" already have assigned professors.
                    </small>
                </div>

                <div class="form-group" id="subjectGroup" style="display:none;">
                    <label asp-for="Subject">
                        <i class="fas fa-book"></i> Assigned Subject *
                    </label>
                    <select asp-for="Subject" class="form-control" id="subjectSelect">
                        <option value="">-- Select Subject --</option>
                        <option value="Math">Math</option>
                        <option value="Science">Science</option>
                        <option value="English">English</option>
                        <option value="Filipino">Filipino</option>
                        <option value="Social Studies">Social Studies</option>
                        <option value="MAPEH">MAPEH</option>
                    </select>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i> Each section can have up to 6 professors (one per subject).
                    </small>
                </div>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("ManageProfessors", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Create Professor Account
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Get section availability data
    const gradeSelect = document.getElementById('gradeSelect');
    const sectionSelect = document.getElementById('sectionSelect');
    const sectionHint = document.getElementById('sectionHint');

    const gradeHint = document.getElementById('gradeHint');
    const gradeHintText = document.getElementById('gradeHintText');
    const sectionGroup = document.getElementById('sectionGroup');
    const subjectGroup = document.getElementById('subjectGroup');
    const subjectSelect = document.getElementById('subjectSelect');

    gradeSelect.addEventListener('change', async function() {
        const gradeLevel = this.value;
        const gradeInt = parseInt(gradeLevel);

        if (!gradeLevel) {
            sectionSelect.innerHTML = '<option value="">-- Select Grade First --</option>';
            sectionHint.style.display = 'none';
            sectionGroup.style.display = 'none';
            subjectGroup.style.display = 'none';
            gradeHint.style.display = 'none';
            return;
        }

        // Show/hide fields based on grade level
        if (gradeInt >= 1 && gradeInt <= 3) {
            // Grades 1-3: No section, no subject
            sectionGroup.style.display = 'none';
            subjectGroup.style.display = 'none';
            gradeHintText.textContent = 'For grades 1-3, one professor handles all subjects and sections.';
            gradeHint.style.display = 'block';
        } else if (gradeInt >= 4 && gradeInt <= 6) {
            // Grades 4-6: Section and subject required
            sectionGroup.style.display = 'block';
            subjectGroup.style.display = 'block';
            gradeHintText.textContent = 'For grades 4-6, you must assign a section and subject. Each section can have up to 6 professors (one per subject).';
            gradeHint.style.display = 'block';

            // Fetch available sections for this grade
            try {
                const response = await fetch(`/Admin/GetAvailableSections?gradeLevel=${gradeLevel}`);
                const data = await response.json();

                sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';

                let hasTakenSections = false;

                for (let i = 1; i <= 8; i++) {
                    const option = document.createElement('option');
                    option.value = i;
                    option.text = `Section ${i}`;
                    sectionSelect.appendChild(option);
                }

            } catch (error) {
                console.error('Error fetching sections:', error);
                sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';
                for (let i = 1; i <= 8; i++) {
                    const option = document.createElement('option');
                    option.value = i;
                    option.text = `Section ${i}`;
                    sectionSelect.appendChild(option);
                }
            }
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}